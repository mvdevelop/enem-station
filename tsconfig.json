
{
  "compilerOptions": {
    /* Base */
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",

    /* React */
    "jsx": "react-jsx",

    /* Paths (ALIAS @/) */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* Qualidade e seguran√ßa */
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "isolatedModules": true,
    "resolveJsonModule": true,

    /* Interop */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },

  "include": ["src"]
}
